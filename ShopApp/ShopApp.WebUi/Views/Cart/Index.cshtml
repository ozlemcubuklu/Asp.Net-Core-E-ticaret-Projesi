@model CartModel

<h1 class="h3">Shopping Cart</h1>
<hr>
@if (Model.CartItems.Count==0)
{
    <div class="row">
    <div class="col-12">
        <div class="alert alert-warning">Sepetinizde Ürün yok.</div>
    </div>
</div>
}else
{
    <div class="row">
    <div class="col-md-8">
        <div class="text-left">
            <h4>Cart Items</h4>
        </div>
    <table class="table table-hover">
        <thead>
            <tr>

                <th></th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>
                        <img src="~/img/@item.ImageUrl" alt="" width="80">
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("c"))</td>
                    <td>
                            <form asp-controller="Cart" asp-action="DeleteFromCart">
                                <input type="hidden" name="productId" value="@item.ProductId">
                                <button type="submit" class="btn btn-danger btn-sm"><i class="fa-solid fa-xmark fa-fw"></i></button>
                            </form>
                    </td>
                </tr>
            }
            <tr></tr>
        </tbody>
    </table>
</div>
<div class="col-md-4">
    <div class="text-left">
            <h4>Cart Summary</h4>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>

                    <th>Cart Total</th>
                    <td>@Model.TotalPrice().ToString("c")</td>

                </tr>
                <tr>

                    <th>Shipping</th>
                    <td>Free</td>

                </tr>
                <tr>

                    <th>Order Total</th>
                    <td>@Model.TotalPrice().ToString("c")</td>

                </tr>
            </thead>


        </table>
        <div class="row">
            <a href="/" class="btn btn-primary">
                <i class="fa-solid fa-arrow-left"></i> Alışverişe Devam Et
             </a>

                <a href="/checkout" class="btn btn-primary ">
                <i class="fa-solid fa-arrow-right"></i> Alışverişi Tamamla
            </a>
        </div>

    
</div>
</div>
}


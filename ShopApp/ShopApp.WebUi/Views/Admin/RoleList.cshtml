
@model IEnumerable<IdentityRole>


<div class="row">
    <div class="col-md-12">
        <h1>Role List</h1>
        <hr>

        <a href="/admin/role/create" class="btn btn-primary btn-sm">Role Ekle</a><hr />
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width:250px">Id</td>
                    <td>Name</td>

                    <td style="width:160px"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>

                            <td>@item.Name</td>

                            <td>
                                <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form action="/admin/role/delete" style="display:inline;" method="post">
                                    <input type="hidden" value="@item.Id" name="RoleId">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        No Role
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>
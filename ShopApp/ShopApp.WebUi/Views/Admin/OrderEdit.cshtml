@model OrderListModel

<h1>Order Details</h1>
<hr>
<table class="table-bordered table-sm table">

        <tr>
            <th> OrderNumber</th>
            <td>@Model.OrderNumber</td>
        </tr>
        <tr>
            <th>UserId</th>
            <td>@Model.UserId</td>
        </tr>

        <tr>
            <th> Name-Surname</th>
            <td>@Model.FirstName @Model.LastName</td>
        </tr>

        <tr>
            <th> Address:</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th> City:</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th> Phone:</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th> Email:</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th> Note:</th>
            <td>@Model.Note</td>
        </tr>
        <tr>
            <th> Order State:</th>
            <td>@Model.OrderState</td>
        </tr>
        <tr>
            <th> Order Date:</th>
            <td>@Model.OrderDate</td>
        </tr>
       
        <tr>
            <th>Payment Type:</th>
            <td>@Model.PaymentType</td>
        </tr>
        <tr>
            <th>Products:</th>
            <td>
                @foreach (var item in Model.OrderItems)
                {
                    <p>
                        @item.Name @item.Quantity adet @item.Price.ToString("c")
                    </p>
                }
            </td>
        </tr>
</table>
